<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true">
        <shape >
            <solid android:color="@color/base_chain"/>
            <corners android:radius="5dp" />
            <!--<stroke
                android:width="1dp"
                android:color="#C1D8FF" />-->
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape >
            <!--半透明的-->
            <solid android:color="#979EAF"/>
            <corners android:radius="5dp" />
            <!--<stroke
                android:width="1dp"
                android:color="#C1D8FF" />-->
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape >
            <!--不透明的-->
            <solid android:color="#FF377BEF"/>
            <corners android:radius="5dp" />
            <!--<stroke
                android:width="1dp"
                android:color="#C1D8FF" />-->
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape >
            <!--半透明的-->
            <solid android:color="#55377BEF"/>
            <corners android:radius="5dp" />
            <!--<stroke
                android:width="1dp"
                android:color="#C1D8FF" />-->
        </shape>
    </item>

    <item android:state_selected="true">
        <shape >
            <!--半透明的-->
            <solid android:color="@color/base_chain"/>
            <corners android:radius="5dp" />
            <!--<stroke
                android:width="1dp"
                android:color="#C1D8FF" />-->
        </shape>
    </item>


</selector>